# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=ats_scoring_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Admin Credentials
ADMIN_EMAIL=admin@ats-scoring.com
ADMIN_PASSWORD=admin123

# Server Configuration
PORT=5000
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Optional: Use the Python ATS model wrapper instead of the JS analyzer
# Set to 'true' to enable. The backend will spawn the Python script and parse JSON output.
USE_PY_MODEL=false
# Python executable to use (path to virtualenv python recommended)
PYTHON_BIN=python
# Timeout for Python model in milliseconds
PY_MODEL_TIMEOUT_MS=30000

# Optional: call an external Python model service over HTTP instead of spawning.
# If PY_MODEL_URL is set (e.g. http://127.0.0.1:8000/api/score) the backend will
# POST multipart/form-data (field `resume` with the file and `job_description`) to
# this URL and expect a JSON response of the form: { success: true, data: {...} }
PY_MODEL_URL=
